page {
  background-color: #ebebeb;
}
.total_wrap {
  background-color: #ffffff;
  padding: 10rpx 10rpx;
  border-left: 10rpx solid #faae58;
  font-size: 36rpx;
  color: #353535;
  margin: 10rpx 10rpx;
}
.fan_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin: 10rpx 10rpx;
  background-color: #ffffff;
  border: 1rpx solid #cccccc;
  border-radius: 20rpx;
}
.fan_wrap navigator {
  flex: 3.8;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fan_wrap navigator .portrait {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fan_wrap navigator .portrait image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.fan_wrap navigator .name_and_introduction {
  flex: 3;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.fan_wrap navigator .name_and_introduction .name {
  color: #faae58;
  font-size: 34rpx;
}
.fan_wrap navigator .name_and_introduction .introduction {
  color: #353535;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.fan_wrap .attention {
  flex: 1;
  position: relative;
  text-align: center;
  padding-right: 10rpx;
}
.fan_wrap .attention .iconfont {
  font-size: 70rpx;
}
.fan_wrap .attention .icon-guanzhu2 {
  color: #faae58;
}
.fan_wrap .attention .icon-yiguanzhu2 {
  color: #cccccc;
}
