page {
  background-color: #ebebeb;
}
.study_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin: 10rpx 10rpx;
  background-color: #ffffff;
  border: 1rpx solid #cccccc;
  border-radius: 20rpx;
  height: 180rpx;
}
.study_wrap .study_picture {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10rpx;
}
.study_wrap .study_picture image {
  width: 130rpx;
  border-radius: 20rpx;
}
.study_wrap .name_and_introduction_and_score {
  flex: 3;
  display: flex;
  flex-direction: column;
  height: 95%;
  padding-left: 10rpx;
}
.study_wrap .name_and_introduction_and_score .name {
  font-size: 36rpx;
}
.study_wrap .name_and_introduction_and_score .introduction {
  color: #353535;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.study_wrap .name_and_introduction_and_score .score {
  font-size: 28rpx;
  color: #353535;
}
.study_wrap .star_wrap {
  flex: 0.8;
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 20rpx;
}
.study_wrap .star_wrap .star {
  flex: 1;
  display: flex;
  padding-right: 15rpx;
  padding-top: 10rpx;
}
.study_wrap .star_wrap .star .star_num {
  color: #353535;
}
.study_wrap .star_wrap .star .icon-xingxing {
  color: #faae59;
  font-size: 40rpx;
}
.study_wrap .star_wrap .little_icon {
  flex: 1;
  display: flex;
  align-items: flex-end;
}
.study_wrap .star_wrap .little_icon .iconfont {
  color: #faae59;
  font-size: 40rpx;
}
